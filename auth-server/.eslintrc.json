{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "naver",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "settings": {
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": { "jsx": true }, // back 필요 없음
    "ecmaVersion": "latest",
    "sourceType": "module",
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "no-empty-function": "off",
    "no-nested-ternary": "off",
    "no-useless-constructor": "off",
    "import/extensions": [
      "error",
      "always",
      {
        "js": "always",
        "ts": "never"
      }
    ]
  }
}
